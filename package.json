{
	"name": "media-manager",
	"version": "0.0.1",
	"description": "The lord of the media. A WordPress plugin to rule them all media.",
	"author": "Damián Suárez (retrofox)",
	"license": "GPL-2.0-or-later",
	"main": "build/index.js",
	"scripts": {
		"clean": "rimraf build",
		"distclean": "rimraf node_modules packages/*/node_modules",
		"clean:packages": "rimraf \"./packages/*/@(build|build-module|build-style)\"",
		"prebuild:packages": "npm run clean:packages && lerna run build",
		"build:packages": "node ./bin/packages/build.js",
		"build": "npm run build:packages && wp-scripts build src/index.js src/view.js",
		"dev:packages": "node ./bin/packages/watch.js",
		"format:js": "wp-scripts format-js",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"dev": "npm run build:packages && concurrently \"npm run start\" \"npm run dev:packages\"",
		"start": "wp-scripts start src/index.js src/view.js",
		"packages-update": "wp-scripts packages-update"
	},
	"dependencies": {
		"@media-manager/block-editor-complements": "file:packages/block-editor-complements",
		"@media-manager/components": "file:packages/components",
		"@media-manager/format-library": "file:packages/format-library",
		"@media-manager/media-connect": "file:packages/media-connect",
		"@media-manager/time-utils": "file:packages/time-utils",
		"@wordpress/block-editor": "^6.1.9",
		"@wordpress/blocks": "^9.1.5",
		"@wordpress/components": "^14.1.6",
		"@wordpress/compose": "^4.1.3",
		"@wordpress/data": "^5.1.3",
		"@wordpress/dom-ready": "^3.1.1",
		"@wordpress/element": "^3.1.1",
		"@wordpress/hooks": "^3.1.1",
		"@wordpress/i18n": "^4.1.1",
		"@wordpress/rich-text": "^4.1.3",
		"chalk": "^4.1.1",
		"classnames": "^2.3.1",
		"gridicons": "^3.3.1",
		"lodash": "^4.17.21",
		"node-watch": "^0.7.1"
	},
	"devDependencies": {
		"@babel/core": "^7.14.6",
		"@emotion/babel-plugin": "^11.3.0",
		"@wordpress/babel-preset-default": "^6.2.0",
		"@wordpress/eslint-plugin": "^9.0.6",
		"@wordpress/postcss-plugins-preset": "^3.1.4",
		"@wordpress/prettier-config": "^1.0.5",
		"@wordpress/scripts": "^16.1.4",
		"babel-plugin-inline-json-import": "^0.3.2",
		"concurrently": "^6.2.0",
		"fast-glob": "^3.2.6",
		"make-dir": "^3.1.0",
		"postcss": "^8.3.5",
		"progress": "^2.0.3",
		"rtlcss": "^3.2.1",
		"sass": "^1.35.1",
		"worker-farm": "^1.7.0"
	},
	"prettier": "@wordpress/prettier-config"
}
